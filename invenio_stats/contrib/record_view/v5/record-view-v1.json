{
  "template": "events-stats-record-view-*",
  "settings": {
    "index.mapper.dynamic": false,
    "index": {
      "refresh_interval": "5s"
    }
  },
  "mappings": {
    "stats-record-view": {
      "_all": {
        "enabled": false
      },
      "date_detection": false,
      "dynamic": false,
      "numeric_detection": false,
      "properties": {
        "timestamp": {
          "type": "date",
          "format": "strict_date_hour_minute_second"
        },
        "record_id": {
          "type": "text"
        },
        "pid_type": {
          "type": "text"
        },
        "pid_value": {
          "type": "text"
        },
        "labels": {
          "type": "text"
        },
        "country": {
          "type": "text"
        },
        "visitor_id": {
          "type": "text"
        }
      }
    }
  },
  "aliases": {
    "events-stats-record-view": {}
  }
}
