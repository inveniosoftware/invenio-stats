{
  "template": "stats-record-view-*",
  "settings": {
    "index": {
      "refresh_interval": "1m"
    }
  },
  "mappings": {
    "date_detection": false,
    "dynamic": false,
    "numeric_detection": false,
    "properties": {
      "timestamp": {
        "type": "date",
        "format": "date_optional_time"
      },
      "count": {
        "type": "integer"
      },
      "unique_count": {
        "type": "integer"
      },
      "record_id": {
        "type": "keyword"
      },
      "collection": {
        "type": "keyword"
      }
    }
  },
  "aliases": {
    "stats-record-view": {}
  }
}
