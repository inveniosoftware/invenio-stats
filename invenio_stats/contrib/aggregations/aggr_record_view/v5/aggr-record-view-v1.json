{
  "template": "stats-record-view-*",
  "settings": {
    "index.mapper.dynamic": false,
    "index": {
      "refresh_interval": "1m"
    }
  },
  "mappings": {
    "record-view-day-aggregation": {
      "_all": {
        "enabled": false
      },
      "date_detection": false,
      "dynamic": false,
      "numeric_detection": false,
      "properties": {
        "timestamp": {
          "type": "date",
          "format": "date_optional_time"
        },
        "count": {
          "type": "integer"
        },
        "record_id": {
          "type": "text"
        },
        "collection": {
          "type": "text"
        }
      }
    },
    "record-view-agg-bookmark": {
      "date_detection": false,
      "properties": {
        "date": {
          "type": "date",
          "format": "date_optional_time"
        }
      }
    }
  },
  "aliases": {
    "stats-record-view": {}
  }
}
